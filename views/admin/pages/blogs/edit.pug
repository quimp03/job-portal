extends  ../../layouts/default.pug
block main
    
block main
    h1(class="mb-4") Chỉnh sửa blog
    form(
      action=`/${prefixAdmin}/blog/edit/${blog.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
          value=blog.title
        )
      div(class="form-group")
        label(for="content") Nội dung
        textarea(
            type="text"
            class="form-control"
            id="content"
            name="content"
            rows="5"
            textarea-mce
        ) #{blog.content}
      div(
        class="form-group"
        upload-image
      )
        label(for="thumbnail") Avatar
        input(
          type="file"
          class="form-control-file"
          id="thumbnail"
          name="thumbnail"
          accept="image/*"
          upload-image-input
        )
        img(
          src=blog.thumbnail
          class="image-preview"
          upload-image-preview
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked=(blog.status === "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked=(blog.status === "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật