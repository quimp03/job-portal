extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success()
    if(role.permissions.includes("jobs-category_view"))
        h1(class="mb-4") Danh mục công việc
        .card.mb-3
            .card-header Danh sách
            .card-body
                .row
                    .col-8
                    .col-4.text-right
                        if(role.permissions.includes("jobs-category_create"))
                            a(
                                href=`/${prefixAdmin}/jobs-category/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới

                table(
                    class="table table-hover table-sm"
                )
                    thead
                        tr
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Tạo bởi
                            th Hành động

                    tbody
                        each item, index in records
                            tr
                                td #{index + 1}
                                td
                                    img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                    )
                                td #{item.title}
                                td
                                    input(
                                    type="number"
                                    value=item.position
                                    style="width: 60px"
                                    min="1"
                                    name="position"
                                    )
                                td
                                    if (item.status === "active")
                                        a(
                                            href="javascript:;"
                                            class="badge badge-success"
                                            data-status="inactive"
                                            data-id=item.id
                                            button-change-status-category
                                        ) Hoạt động
                                    else
                                        a(
                                            href="javascript:;"
                                            class="badge badge-danger"
                                            data-status="active"
                                            data-id=item.id
                                            button-change-status-category
                                        ) Dừng hoạt động
                                td 
                                    div #{item.createByFullName}
                                    div #{moment(item.createdAt).format("DD/MM/YYYY HH:mm")}
                                td
                                    a(
                                    class="btn btn-secondary btn-sm"
                                    href=`/${prefixAdmin}/jobs-category/detail/${item.id}`
                                    ) Chi tiết
                                    if(role.permissions.includes("jobs-category_edit"))
                                        a(
                                        class="btn btn-warning btn-sm ml-1"
                                        href=`/${prefixAdmin}/jobs-category/edit/${item.id}`
                                        ) Sửa
                                    if(role.permissions.includes("jobs-category_delete"))
                                        button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete-category
                                        data-id=item.id
                                        ) Xóa
        form(
            form-change-status-jobscategory
            method="POST"
            action=""
            data-path="/admin/jobs-category/change-status"
            )
        form(
            form-delete-category 
            method="POST"
            action=""
            data-path="/admin/jobs-category/delete-category"
            )