extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  h1 Cài đặt chung
  +alert-error()
  +alert-success()
  form(
    action=`/${prefixAdmin}/setting/general?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="websiteName") Tên website
      input(
        type="text"
        class="form-control"
        id="websiteName"
        name="websiteName"
        value=(settingGeneral ? settingGeneral.websiteName : "")
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="banner") Banner
      input(
        type="file"
        class="form-control-file"
        id="banner"
        name="banner"
        accept="image/*"
        upload-image-input
      )
      img(
        src=(settingGeneral ? settingGeneral.banner : "")
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=(settingGeneral ? settingGeneral.phone : "")
      )
    div(class="form-group")
      label(for="facebook") Facebook
      input(
        type="text"
        class="form-control"
        id="facebook"
        name="facebook"
        value=(settingGeneral ? settingGeneral.facebook : "")
      )
    div(class="form-group")
      label(for="tiktok") Tiktok
      input(
        type="text"
        class="form-control"
        id="tiktok"
        name="tiktok"
        value=(settingGeneral ? settingGeneral.tiktok : "")
      )
    div(class="form-group")
      label(for="address") Địa chỉ
      input(
        type="text"
        class="form-control"
        id="address"
        name="address"
        value=(settingGeneral ? settingGeneral.address : "")
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật