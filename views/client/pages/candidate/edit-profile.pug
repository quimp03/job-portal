extends ../../layouts/default3.pug
include ../../mixins/alert.pug
block main
    h1 TẠO HỒ SƠ CÁ NHÂN
    .content
        form(action=`/candidate/update-profile/${profile.id}?_method=PATCH` method="POST")
            h4 Thông tin cá nhân
            .input-group
            label(for='fullName') H&#x1ECD; V&agrave; T&ecirc;n:
            input#hoten(type='text' name='fullName' required=''  value=profile.fullName)
            .input-group
            label(for='date') Ng&agrave;y Sinh:
            input#ngaysinh(type='date' name='date' required='' value=moment(profile.date).format("DD/MM/YYYY"))
            .input-group
            label(for='sex') Gi&#x1EDB;i T&iacute;nh:
            select#gioitinh(name='sex' required='' value= profile.sex)
                option(value='nam') Nam
                option(value='nu') N&#x1EEF;
            .input-group
            label(for='email') E-mail:
            input#email(type='email' name='email' required='' value=profile.email)
            .input-group
            label(for='phone') S&#x1ED1; &Dstrok;i&#x1EC7;n Tho&#x1EA1;i:
            input#sdt(type='tel' name='phone' required='' value=profile.phone)
            .form-group
              label(for='kiNang') <b>Kĩ năng</b>
              textarea(
                class="form-control"
                id="desc"
                name="kiNang"
                rows="5"
                textarea-mce
            )   #{profile.kiNang}
            .form-group
              label(for='hocVan') <b>Học vấn</b>
              textarea(
                class="form-control"
                id="desc"
                name="hocVan"
                rows="5"
                textarea-mce
            )   #{profile.hocVan}
            .form-group
              label(for='kinhNghiem') <b>Kinh nghệm</b>
              textarea(
                class="form-control"
                id="desc"
                name="kinhNghiem"
                rows="5"
                textarea-mce
                value=profile.kinhNghiem
            )   #{profile.kinhNghiem}
            .form-group
              label(for='mụcTiêu') <b>Mục tiêu</b>
              textarea(
                class="form-control"
                id="desc"
                name="mucTieu"
                rows="5"
                textarea-mce
            ) #{profile.mucTieu}
            button(type='submit') Cập nhật
